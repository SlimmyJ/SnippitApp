<Window x:Class="SnippitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">

    <Window.Resources>
        <CollectionViewSource x:Key="listingDataView" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="3"
                Grid.ColumnSpan="2"
                Background="LightSteelBlue" />
        <Border Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="LightSteelBlue" />
        <Border Grid.Row="2"
                Grid.Column="0"
                Background="AliceBlue" />
        <DockPanel Grid.Row="0"
                   Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Snippit">
                    <MenuItem Click="MenuItemNew_Click"
                              Header="_New" />
                    <MenuItem Header="_Edit" />
                    <MenuItem Header="_Delete" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="Authors">
                    <Separator />
                    <MenuItem Header="View List" />
                </MenuItem>
                <MenuItem Header="Repo Control">
                    <MenuItem Click="SaveToRepo"
                              Header="SaveToRepo" />
                    <MenuItem Click="GetFromRepo"
                              Header="GetFromRepo" />
                    <Separator />
                </MenuItem>
            </Menu>
        </DockPanel>
        <ListBox x:Name="ListBoxOverView"
                 Grid.Row="2"
                 Grid.RowSpan="1"
                 Grid.ColumnSpan="1"
                 Padding="10">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="MenuItemDelete_Click"
                              Header="Delete" />
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</Window>